<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App05_ControleXF.Controles.SliderStepperPage">
    <ContentPage.Content>
        <StackLayout>

            <Slider 
                Minimum="0"
                Maximum="100"
                Value="50"
                
                ValueChanged="ActionValueChangedSlider"
                />

            <Label x:Name="lblValorSlider"/>


            <Stepper 
                Minimum="1"
                Maximum="5"  
                Increment="1"
                Value="3"
                
                ValueChanged="ActionValueChangedStepper"
                />

            <Label x:Name="lblValorStepper" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
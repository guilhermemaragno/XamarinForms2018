<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App05_ControleXF.Controles.TableViewPage">
    <ContentPage.Content>
        <StackLayout>

            <TableView Intent="Settings">

                <TableRoot>
                    <TableSection Title="Backup">
                        <SwitchCell Text="Salvar Backup 01" On="True"/>
                        <SwitchCell Text="Salvar Backup 02" On="False"/>
                        <SwitchCell Text="Salvar Backup 03" On="False"/>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="Backup Geral"/>
                                <Switch IsToggled="True"/>
                            </StackLayout>
                        </ViewCell>
                    </TableSection>


                    <TableSection Title="Seguranca">
                        <SwitchCell Text="Senhas" On="True"/>
                    </TableSection>
                </TableRoot>
                
            </TableView>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
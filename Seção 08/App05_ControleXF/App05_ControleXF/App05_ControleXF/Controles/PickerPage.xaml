<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App05_ControleXF.Controles.PickerPage">
    <ContentPage.Content>
        <StackLayout>

            <Picker
                Title="Titulo das Opções"
                TextColor="Green"
                SelectedIndex="0"
                
                SelectedIndexChanged="ActionsChangedIndex"
                >

                <Picker.Items>
                    <x:String>Opção 01</x:String>
                    <x:String>Opção 02</x:String>
                    <x:String>Opção 03</x:String>
                </Picker.Items>
                
            </Picker>

            <Label x:Name="lblResultado" />



        </StackLayout>
    </ContentPage.Content>
</ContentPage>